{
	"name": "backend",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply garant_db --local",
		"db:migrate:remote": "wrangler d1 migrations apply garant_db",
		"lint": "biome check --write",
		"format": "biome format --write",
		"typecheck": "tsc --project tsconfig.json --noEmit"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.4",
		"jose": "^6.1.3",
		"siwe": "^3.0.0",
		"viem": "^2.44.4",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@cloudflare/workers-types": "^4.20250220.0",
		"drizzle-kit": "^0.31.8",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"wrangler": "^4.4.0"
	}
}
